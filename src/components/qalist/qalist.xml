<view class="tab-panel health-detail" wx:for="{{list}}" wx:for-index="index">
	<navigator redirect="" hover-class="none" url="/pages/healthQA/detail?id={{item.id}}">
		<view class="title">{{item.questionContent}}</view>
		<view class="content">
			<image class="avatar" src="{{item.healthDoctor.doctorHeadImgUrl}}"></image>
			<view class="bubble" catchtap="bindAudio" data-url="{{item.healthDoctor.doctorHeadImgUrl}}" data-id="{{item.id}}" bindended="audioPlayEnd">
				<icon class="wave{{audio[item.id].status?' waveing':' wave-default'}}"></icon>
				<text>限时免费听</text>
			</view>
			<view class="gray fz28">听过{{item.tuneNumber}}次</view>
		</view>
		<view class="info gray fz28">
			<text>{{item.healthDoctor.doctorName}}   {{item.healthDoctor.doctorTitle}}</text>
		</view>
	</navigator>
	<view class="opt">
		<view class="op">
			<icon class="iconfont icon-comment"></icon>
			<text>{{item.commentNumber}}</text>
		</view>
		<view class="op" catchtap="praise" data-id="{{item.id}}" data-index="{{index}}" style="{{item.praiseed?'color:#ff6a00':''}}">
			<icon class="iconfont icon-appreciate" style="{{item.praiseed?'color:#ff6a00':''}}"></icon>
			<text>{{item.praiseNumber}}</text>
		</view>
	</view>
</view>