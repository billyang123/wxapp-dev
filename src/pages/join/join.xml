<view class="container join-main">
	<view class="justjoin" catchtap="joinBind">
		<text>立即加入</text>
	</view>
	<view class="input-area" wx:for="{{persons}}" wx:for-index="idx">
		<view class="sec-con">
			<view class="section">
				<view class="section_title">姓名</view>
				<input bindinput="bindKeyInput" placeholder="例如：张三" data-idx="{{idx}}" data-name="name" value="{{item.name?item.name:''}}"/>
			</view>
			<view class="section">
				<view class="section_title">证件号码</view>
				<input bindinput="bindKeyInput" placeholder="身份证号" data-idx="{{idx}}" data-name="cardCode" maxlength="18" value="{{item.cardCode?item.cardCode:''}}"/>
			</view>
		</view>
		<view class="del-btn" catchtap="removePerson" data-idx="{{idx}}">
			<icon class="del-icon"></icon>
		</view>
	</view>
	<view class="add-btn" catchtap="addPerson">
		<icon class="icon-add iconfont icon-roundadd"></icon>
		<text> 继续添加</text>
	</view>
	<!-- <view class="money">
		<view class="t">
			<text>选择金额</text>
		</view>
		<view class="num">
			<text>9元</text>
		</view>
	</view> -->
	<view class="intro">
		<view><text>{{conditionTxt}}</text></view>
		<view class="tip">
			请在加入本互助社群前咨询家人，避免重复加入。
		</view>
	</view>
	<view class="checkbox-group">
    <checkbox-group bindchange="checkChange">
		<view>
			<label class="checkbox">
			    <checkbox disabled="true" checked="{{publicChecked}}" />已同意 <text class="text">{{publicConvention}}</text>
			</label>
		</view>
		<view>
			<label class="checkbox">
		    	<checkbox disabled="true" checked="{{checked}}" />已同意 <text class="text">{{conventionTxt}}</text>
		  	</label>
		</view>
    </checkbox-group>
	</view>
</view>
