<view class="container submit-commit">
	<component key="alert"/>
	<form bindsubmit="formSubmit" >
		<view class="section">
		  <textarea name="questionContent" value="{{textareaValue}}" placeholder="这里可以提交你的问题哦…" />
		</view>
		<view>
			<button formType="submit" type="warn" class="submit-btn" hover-class="none">提交</button>
		</view>
	</form>
</view>