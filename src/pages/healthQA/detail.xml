<scroll-view scroll-y="true" style="height: {{windowHieght}}px;" bindscrolltolower="loadMore">
<view class="container health">
	<view class="health-detail">
		<view class="title">{{detail.questionContent}}</view>
		<view class="content">
			<navigator redirect="" hover-class="none" url="/pages/healthQA/doctorDetail?id={{detail.healthDoctor.id}}">
				<image class="avatar" src="{{detail.healthDoctor.doctorHeadImgUrl}}"></image>
			</navigator>
			<!-- <image class="avatar" src="{{detail.healthDoctor.doctorHeadImgUrl}}"></image> -->
			<view class="bubble" catchtap="bindAudio" data-url="{{detail.answerRecUrl}}" data-id="{{detail.id}}" bindended="audioPlayEnd">
				<icon class="wave{{audio[detail.id].status?' waveing':' wave-default'}}"></icon>
				<text>限时免费听</text>
			</view>
			<view class="gray fz28">听过{{detail.tuneNumber}}次</view>
		</view>
		<view class="info gray fz28">
			<text>{{detail.healthDoctor.doctorName}}   {{detail.healthDoctor.doctorTitle}}</text>
			<view catchtap="praise" data-id="{{detail.id}}" data-type="detail" data-index="0" style="{{detail.praiseed?'color:#ff6a00':''}}">
				<icon class="iconfont icon-appreciate fz42" style="{{detail.praiseed?'color:#ff6a00':''}}"></icon>
				<text>  {{detail.praiseNumber}}</text>
			</view>
		</view>
	</view>
	<view class="comment" wx:for="{{list}}" wx:for-index="index">
		<view class="comment-inner">
			<image class="avatar" src="{{item.headImg}}"></image>
			<view class="comment-content">
				<view class="title">
					<text>{{item.nickName}}</text>
					<view catchtap="praise" data-id="{{item.id}}" data-type="list" data-index="{{index}}" style="{{item.praiseed?'color:#ff6a00':''}}">
						<icon class="iconfont icon-appreciate fz42" style="{{item.praiseed?'color:#ff6a00':''}}"></icon>
						<text>  {{item.praiseNumber}}</text>
					</view>
				</view>
				<view class="content">{{item.commentContent}}</view>
				<view class="optaout">
					<text>{{item.createTime}}</text>
					<navigator class="reply-link" redirect="" hover-class="none" url="/pages/healthQA/commit?qaCommentId={{item.id}}">回复</navigator>
				</view>
			</view>
			<view class="comment-reply">

				<view class="cr-p" wx:for="{{item.commentReply}}" wx:for-index="idx" wx:for-item="comm" data-cid="{{comm.healthQaCommentId}}">
					<text class="nk">{{comm.userNickname}}：</text>
					<text>{{comm.replyContent}}</text>
				</view>
				
			</view>
		</view>
	</view>
	<view class="commit-form" catchtap="commitFocus">
		<view class="commit-input">
			<input type="text" placeholder="写留言…" bindinput="bindinput" auto-focus="{{commitfocus}}" placeholder-style="color:#999;font-size:28rpx;"/>
		</view>
		<view class="commit-num">
			<icon class="iconfont icon-comment fz42"></icon>
			<text class="gray fz36">  {{totalComNum}}</text>
		</view>
	</view>
	<view class="loading" wx:if="{{hasMore}}">
		<icon class="weui-loading"></icon>
		<text>稍等下，精彩马上准备好…</text>
	</view>
	<view class="loading" wx:else >
		<text>没有更多内容了</text>
	</view>
</view>
</scroll-view>