<view class="container accountlist">
	<view class="top-title">
		<text></text>
		<view class="h2">账单</view>
		<view class="tt-r">
			<picker bindchange="bindPickerChange" value="{{index}}" range="{{typeArr}}">
			    <view class="picker">
			      {{typeArr[index]}}
			    </view>
			</picker>
		</view>
	</view>
	<view class="account-item" wx:for="{{rows}}" catchtap="linkTo" data-link="/pages/accountdetail/accountdetail?id={{item.id}}">
		<view class="inner account-time">
			<view class="day">{{item.day}}</view>
			<view class="time">{{item.time}}</view>
		</view>
		<view class="inner account-info">
			<view class="title">{{item.masterDesc}}</view>
			<view class="name">{{item.subDesc}}</view>
		</view>
		<view class="inner account-number">
			<view class="num">
				<text wx:if="{{item.masterType == 2}}">-</text><text wx:if="{{item.masterType == 1}}">+</text>
				{{item.totalAmt}}
			</view>
			<view class="status">成功</view>
		</view>
	</view>
</view>