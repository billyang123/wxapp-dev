<view class="group-item" wx:for="{{list}}">
<view class="gi-title">
<view class="gt">
<text>{{item.insuredName}}</text>
</view>
</view>
<view class="gi-content">
<view class="p">
<text class="t">加入社群：</text>
<text class="gray-m">{{item.projectName}}</text>
</view>
<view class="p">
<text class="t">互助金额：</text>
<text class="gray-m">最高{{item.projectGuaranteeMax}}元</text>
</view>
<view class="p">
<text class="t">账户余额：</text>
<text class="gray-m">{{item.availableBalance}}元</text>
<text class="emer" wx:if="{{item.accountStatus == 2}}">余额告急</text>
</view>
</view>
<view class="gi-footer">
<navigator class="gi-item" hover-class="none" redirect="" url="/pages/recharge/recharge?pid={{item.id}}&amp;name={{item.insuredName}}&amp;pname={{item.projectName}}&amp;num={{item.availableBalance}}">
<text>充值</text>
</navigator>
<navigator class="gi-item" hover-class="none" redirect="" url="/pages/elecert/elecert?id={{item.id}}">
<text>查看凭单</text>
</navigator>
