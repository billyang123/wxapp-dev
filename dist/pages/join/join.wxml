<view class="container join-main">
<view class="justjoin" catchtap="_dispatch" data-catchtap="joinBind">
<text>微信支付{{totalAmt}}元</text>
</view>
<view class="error-tips alert-error-tips" animation="{{alert.animdata}}" style="height:0">
<text>{{alert.msg}}</text>
</view>
<view class="input-area" xmlns:wx="" wx:for="{{persons}}" wx:for-index="idx">
<view class="sec-con" style="width:{{persons.length==1?750:625}}rpx">
<view class="section">
<view class="section_title">姓  名</view>
<input bindinput="_dispatch" placeholder="被保障人姓名" data-idx="{{idx}}" data-name="name" value="{{item.name?item.name:''}}" data-bindinput="bindKeyInput"/>
</view>
<view class="section">
<view class="section_title">身份证</view>
<input bindinput="_dispatch" type="idcard" placeholder="被保障人身份证" data-idx="{{idx}}" data-name="cardCode" maxlength="18" value="{{item.cardCode?item.cardCode:''}}" data-bindinput="bindKeyInput"/>
</view>
</view>
<view class="del-btn" catchtap="_dispatch" data-idx="{{idx}}" wx:if="{{persons.length!=1}}" data-catchtap="removePerson">
<icon class="del-icon"/>
</view>
</view>
<view class="add-btn" catchtap="_dispatch" data-catchtap="addPerson">
<icon class="icon-add iconfont icon-roundadd"/>
<text> 为家人添加保障</text>
</view>
