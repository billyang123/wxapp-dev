<view class="checkbox-group">
<checkbox-group bindchange="_dispatch" data-bindchange="checkChange">
<view>
<label class="checkbox">
<checkbox checked="true" value="1"/> 已同意 <text class="text">{{publicConvention}}</text>
</label>
</view>
<view>
<label class="checkbox">
<checkbox checked="true" value="2"/> 已同意 <text class="text">{{conventionTxt}}</text>
</label>
</view>
</checkbox-group>
</view>
</view>