<view class="container join-main">
	<view class="justjoin" catchtap="_dispatch" data-catchtap="joinBind" data-path="">
		<text>立即加入</text>
	</view>
	<view class="error-tips alert-error-tips" animation="{{alert.animdata}}" style="height:0">
	<text>{{alert.msg}}</text>
</view>
	<view class="input-area" xmlns:wx="" wx:for="{{persons}}" wx:for-index="idx">
		<view class="sec-con">
			<view class="section">
				<view class="section_title">姓名</view>
				<input bindinput="_dispatch" placeholder="例如：张三" data-idx="{{idx}}" data-name="name" value="{{item.name?item.name:''}}" data-bindinput="bindKeyInput" data-path=""/>
			</view>
			<view class="section">
				<view class="section_title">证件号码</view>
				<input bindinput="_dispatch" type="idcard" placeholder="身份证号" data-idx="{{idx}}" data-name="cardCode" maxlength="18" value="{{item.cardCode?item.cardCode:''}}" data-bindinput="bindKeyInput" data-path=""/>
			</view>
		</view>
		<view class="del-btn" catchtap="_dispatch" data-idx="{{idx}}" data-catchtap="removePerson" data-path="">
			<icon class="del-icon"/>
		</view>
	</view>
	<view class="add-btn" catchtap="_dispatch" data-catchtap="addPerson" data-path="">
		<icon class="icon-add iconfont icon-roundadd"/>
		<text> 为家人添加保障</text>
	</view>
