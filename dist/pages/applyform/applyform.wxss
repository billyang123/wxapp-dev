.applyform .form-area .item-title {
  overflow: hidden;
}
.applyform .form-area .item-title .txt {
  width: 190rpx;
}
.applyform .form-area .item-title input::-webkit-input-placeholder {
  font-size: 24rpx;
  color: #c7c7c7;
}
.applyform .form-area .item-title .txt,
.applyform .form-area .item-title input {
  float: left;
  height: 52rpx;
  line-height: 52rpx;
}
.applyform .section {
  background-color: #fff;
  padding: 36rpx;
  min-height: 300rpx;
  margin-bottom: 40rpx;
}
.applyform .section textarea {
  min-height: 300rpx;
}
.applyform .apply-btn {
  width: 678rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  background-color: #ff6a00;
  color: #fff;
  font-size: 36rpx;
}
