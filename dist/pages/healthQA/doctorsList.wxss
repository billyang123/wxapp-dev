.doctor {
  background-color: #fff;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #ddd;
}
.doctor:last-child {
  border-bottom: 0;
}
.doctor-inner {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.doctor-inner .media {
  padding-right: 30rpx;
}
.doctor-inner .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.doctor-inner .t {
  font-size: 28rpx;
  color: #666;
}
.tags text {
  display: inline-block;
  padding: 3rpx 25rpx;
  background: #f7f8fa;
  border: 1px solid #dddddd;
  border-radius: 4px;
  margin-right: 10rpx;
  font-size: 28rpx;
  margin-top: 12rpx;
}
