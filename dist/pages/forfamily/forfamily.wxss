  float: left;
  padding: 0 68rpx 0 38rpx;
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA0AAAAXBAMAAAAiiNiyAAAAG1BMVEUAAACrq6uqqqqrq6uqqqqrq6urq6vMzMyqqqqiVq4uAAAACHRSTlMAoeWJinDgBVRF68UAAAAwSURBVAjXYwgyYAADjUYI7dEhAKYZO6ACEuQIQAwt61CA8WHyCPWEuQj3INwHcy8A8hQTRXGkcZ8AAAAASUVORK5CYII=") no-repeat right center;
  background-size: 13rpx 23rpx;
  -webkit-flex-shrink: 1;
  -ms-flex: 0 1 auto;
  flex-shrink: 1;
  width: 100%;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.give-family-list .dl .dd .h2 {
  font-size: 36rpx;
  height: 40rpx;
  font-weight: 500;
  padding-bottom: 20rpx;
}
.give-family-list .dl .dd .p {
  color: #999;
  line-height: 38rpx;
  font-size: 28rpx;
}
