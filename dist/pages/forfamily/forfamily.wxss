.give-family-item {
  padding: 42rpx 0;
}
.give-family-item .p {
  margin: 0 auto;
  position: relative;
  width: 420rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
.give-family-item .p:before {
  content: '“';
  position: absolute;
  font-size: 150rpx;
  color: #dddddd;
  top: 30rpx;
  left: -150rpx;
}
.give-family-item .p:after {
  content: '”';
  position: absolute;
  font-size: 150rpx;
  color: #dddddd;
  bottom: -50rpx;
  right: -150rpx;
}
.give-family-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.give-family-list .dl {
  overflow: hidden;
  padding-right: 23rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.give-family-list .dl .dt {
  float: left;
  width: 90rpx;
  height: 240rpx;
  background-color: #FF6A00;
  color: #fff;
  layout-flow: vertical-ideographic;
  /*这样也有一样的竖排效果，一样的不支持FF*/
  text-align: center;
  letter-spacing: 4rpx;
  writing-mode: tb-rl;
  font-size: 36rpx;
  line-height: 90rpx;
}
