<view class="container">
	<view class="account-header">
		<view class="account-info login" wx:if="{{login}}">
			<view class="acimage default-image" catchtap="_dispatch" data-link="/pages/profile/profile" data-catchtap="linkTo">
				<image src="{{userInfo.headImgUrl}}" class="avatar"/>
				<view class="volunteer" wx:if="{{isVolunteer}}">
					<text>自愿者</text>
				</view>
			</view>
			<view class="txt-area" wx:if="{{userInfo.existGuarantee}}">
				<view class="name">
					<text>{{userInfo.nickName}}</text>
				</view>
				<view class="hnumber">
					<view class="hn-l">
						<view class="num"><text>{{userInfo.serialNumber}}</text></view>
						<view class="th"><text>加入社群排位</text></view>
					</view>
					<view class="hn-l">
						<view class="num"><text>{{userInfo.joinedDays}}</text></view>
						<view class="th"><text>加入社群天数</text></view>
					</view>
				</view>
				<!-- <view class="msgnum-icon">
					<view class="num">
						<text>2</text>
					</view>
				</view> -->
			</view>
			<view class="txt" wx:else="wx:else">
				<text>{{userInfo.nickName}}</text>
			</view>
		</view>
		<view wx:else="wx:else" class="account-info no-login">
			<view class="acimage default-image" catchtap="_dispatch" data-catchtap="bindLogin"/>
			<view class="txt" catchtap="_dispatch" data-catchtap="bindLogin">
				<text>立即登录</text>
			</view>
		</view>
	</view>
	<view class="hdnav">
		<view class="col-50">
			<icon class="myicon-index-1"/>
			<text class="txt">为家人加社群</text>
			<icon class="iconfont icon-fangxiang-right"/>
		</view>
		<view class="col-50 nr">
			<icon class="myicon-index-2"/>
			<text class="txt">送亲友</text>
			<icon class="iconfont icon-fangxiang-right"/>
		</view>
	</view>
	<view class="media-list ac-list">
		<view class="item-link item-content" catchtap="_dispatch" data-link="/pages/inification/inification" data-catchtap="linkTo">
			<view class="item-media">
				<image class="img" src="/images/account_wdsq_icon.png"/>
			</view>
			<view class="item-inner">
				<view class="item-title">
					<text>我的互助</text>
				</view>
				<view class="item-after">
					<text>家庭账单、充值、互助凭单</text>
				</view>
			</view>
		</view>
		<view class="item-link item-content" catchtap="_dispatch" data-link="/pages/claim/claim" data-catchtap="linkTo">
			<view class="item-media">
				<image class="img" src="/images/account_sqhz_icon.png"/>
			</view>
			<view class="item-inner">
				<view class="item-title">
					<text>申请互助</text>
				</view>
			</view>
		</view>
	</view>
	<view class="media-list ac-list">
		<view class="item-link item-content">
			<view class="item-media">
				<image class="img" src="/images/account-volunteer-icon.png"/>
			</view>
			<view class="item-inner">
				<view class="item-title">
					<text>志愿者</text>
				</view>
			</view>
		</view>
		<view class="item-link item-content">
			<view class="item-media">
				<image class="img" src="/images/account-city-icon.png"/>
			</view>
			<view class="item-inner">
				<view class="item-title">
					<text>同城会</text>
				</view>
			</view>
		</view>
	</view>
	<view class="media-list ac-list">
		<view class="item-link item-content">
			<view class="item-media">
				<image class="img" src="/images/account-card-icon.png"/>
			</view>
			<view class="item-inner">
				<view class="item-title">
					<text>券</text>
				</view>
			</view>
		</view>
		<view class="item-link item-content">
			<view class="item-media">
				<image class="img" src="/images/account-question-icon.png"/>
			</view>
			<view class="item-inner">
				<view class="item-title">
					<text>常见问题</text>
				</view>
			</view>
		</view>
	</view>
</view>