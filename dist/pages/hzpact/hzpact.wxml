<view class="container">
	<view class="top-title">
		<text/>
		<view class="h2">{{title}}</view>
		<text/>
	</view>
	<view class="media-list slide-media-list slide-list slide-slide-list">
	<view xmlns:wx="" wx:for="{{slide.slideData}}" wx:for-index="idx" catchtap="_dispatch" data-index="{{idx}}" data-catchtap="setSlide" data-path="slide">
		<view class="item-content slide-item-content">
			<view class="item-inner slide-item-inner">
				<view class="item-title slide-item-title">
					<text>{{item.t}}</text>
				</view>
				<view class="item-after slide-item-after" wx:if="{{item.a}}">
					<text>{{item.a}}</text>
				</view>
				<icon class="icon-chevron slide-icon-chevron" animation="{{slide.chevronAnim[idx]}}"/>
			</view>
		</view>
		<view class="item-xmain{{item.auto}} slide-item-xmain{{item.auto}}" animation="{{slide.slideAnim[idx]}}" style="height:0;">
			<view class="item-xmain-bd slide-item-xmain-bd">
				<view class="p slide-p" wx:for="{{item.txt}}" wx:for-item="text">
					<text>{{text}}</text>
				</view>
			</view>
		</view>
	</view>
	<view wx:for="{{slide.slideMore}}">
		<navigator wx:if="{{item.link}}" class="item-link slide-item-link item-content slide-item-content" redirect="" url="{{item.link}}">
			<view class="item-inner slide-item-inner">
				<view class="item-title slide-item-title">
					<text class="org slide-org">{{item.title}}</text>
				</view>
				<view class="item-title slide-item-title" wx:if="{{item.after}}">
					<text>{{item.after}}</text>
				</view>
			</view>
		</navigator>
		<view wx:else="wx:else" class="item-link slide-item-link item-content slide-item-content">
			<view class="item-inner slide-item-inner item-link-inner slide-item-link-inner">
				<view class="item-title slide-item-title">
					<text>{{item.title}}</text>
				</view>
				<view class="item-title slide-item-title" wx:if="{{item.after}}">
					<text>{{item.after}}</text>
				</view>
			</view>
		</view>
	</view>
</view>
</view>