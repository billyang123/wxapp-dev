.recharge .user-info {
  padding: 40rpx;
  margin-bottom: 30rpx;
}
.recharge .user-info .p {
  margin-top: 32rpx;
}
.recharge .user-info .d {
  font-size: 36rpx;
}
.recharge .user-info .num {
  font-size: 38rpx;
  margin-left: 6rpx;
}
.recharge .user-info .t {
  margin-right: 20rpx;
}
.recharge .title {
  font-size: 36rpx;
  color: #333;
  padding-bottom: 10rpx;
}
.recharge .tip {
  font-size: 26rpx;
}
.recharge .user-info,
.recharge .recharge-box {
  background-color: #fff;
}
.recharge-box {
  padding: 24rpx;
}
.recharge-box .pd40 {
  padding: 16rpx;
}
.recharge-box .rc-number-tab {
  display: flex;
  justify-content: space-between;
}
.recharge-box .rc-number-tab .num {
  border: 1rpx solid #ff6a00;
  border-radius: 10rpx;
  text-align: center;
  font-size: 38rpx;
  width: 216rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ff6a00;
  position: relative;
}
.recharge-box .rc-number-tab .num .num_active {
  position: absolute;
  top: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
}
.recharge-box .rc-input {
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  overflow: hidden;
  padding: 18rpx 32rpx;
}
.recharge-box .rc-input .input {
  width: 590rpx;
  float: left;
}
.or-line {
  position: relative;
  border-bottom: 1rpx dashed #ddd;
  margin: 40rpx 0;
}
.or-line .txt {
  display: block;
  position: absolute;
  background-color: #fff;
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  left: 50%;
  margin-left: -50rpx;
  top: -22rpx;
}
