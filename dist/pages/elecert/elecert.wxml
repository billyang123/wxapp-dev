<view class="container elecert">
	<view class="card">
		<view class="card-title">电子凭证</view>
		<view class="card-content">
			<view class="p">
				<text class="t">社群名称：</text>
				<text class="gray-m">{{project.projectName}}</text>
			</view>
			<view class="p">
				<text class="t">互助金额：</text>
				<text class="gray-m">最高{{project.projectGuaranteeMax}}元</text>
			</view>
			<view class="p mt">
				<text class="t">姓名：</text>
				<text class="gray-m">{{projectAccount.insuredName}}</text>
			</view>
			<view class="p">
				<text class="t">身份证号：</text>
				<text class="gray-m">{{projectAccount.insuredIdNumber}}</text>
			</view>
			<view class="p mt">
				<text class="t">加入时间：</text>
				<text class="gray-m">{{projectAccount.createTime}}</text>
			</view>
			<view class="p">
				<text class="t">生效时间：</text>
				<text class="gray-m">{{projectAccount.effectiveTime}}</text>
			</view>
		</view>
	</view>
	<view class="card-info media-list">
		<view class="item-content item-link">
			<view class="item-inner">
				<view class="item-title">互助范围</view>
			</view>
		</view>
		<view class="item-content" wx:for="{{list}}">
			<view class="item-inner">
				<view class="item-title-row">
					<view class="item-title">{{item.projectSubject.subjectName}}</view>
					<view class="item-after" wx:if="{{item.projectSubject.subjectStatus == 2}}">
						<text class="blue">保障中</text>
					</view>
					<view class="item-after" wx:if="{{item.projectSubject.subjectStatus == 1}}">
						<text class="gray-m">等待期还剩{{item.projectSubject.subjectWaiteTime}}天</text><icon class="iconwh" bindtap="_dispatch" data-bindtap="showIntro"/>
					</view>
					
				</view>
				<view class="item-subtitle">{{item.projectSubject.subjectDesc}}</view>
			</view>
		</view>
	</view>
	<view class="btn-padd">
		<view class="btn btn-org" catchtap="_dispatch" data-link="/pages/community/community?type={{item.project.id}}" data-catchtap="{{linkTo}}">
			<text>查看社群详情</text>
		</view>
	</view>
</view>