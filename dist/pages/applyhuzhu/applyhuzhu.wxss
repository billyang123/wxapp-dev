.hz-content {
  background-color: #fff;
  margin-bottom: 20rpx;
  margin-top: 30rpx;
}
.hz-content .title {
  padding: 39rpx 36rpx 12rpx 36rpx;
  font-size: 36rpx;
}
.hz-content .title .tname {
  font-family: PingFangSC-Medium;
  border-left: 10rpx solid #ff6a00;
  padding-left: 18rpx;
  background-position: right 8rpx;
  background-repeat: no-repeat;
}
.hz-content .p {
  line-height: 48rpx;
}
.hz-process {
  padding: 40rpx 30rpx 40rpx 73rpx;
}
.hz-process .stepbar {
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  border: 1rpx solid #ff6a00;
  padding: 7rpx;
  position: absolute;
  top: 0;
  left: -40rpx;
  background-color: #fff;
}
.hz-process .stepbar .t-num {
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 32rpx;
  background-color: #ff6a00;
  text-align: center;
  color: #fff;
}
.hz-process .step-item {
  position: relative;
  padding-left: 52rpx;
  border-left: 1px solid #ff6a00;
  padding-bottom: 46rpx;
  padding-top: 18rpx;
}
.hz-process .step-item:last-child {
  border-left: 1px solid transparent;
}
.hz-process .st-inner {
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
}
.hz-process .st-inner.tel-kf {
  margin: 12rpx 0;
}
.hz-process .st-inner.tel-kf .gray {
  line-height: 60rpx;
  float: left;
}
.hz-process .st-inner .st {
  margin-right: 27rpx;
  font-size: 36rpx;
  color: #333;
  font-family: PingFangSC-Medium;
  margin-bottom: 10rpx;
  display: block;
}
.hz-process .st-inner .gray {
  color: #999;
  font-size: 28rpx;
}
