<view class="container accountlist">
	<view class="top-title">
		<text/>
		<view class="h2">账单</view>
		<view class="tt-r">
			<picker bindchange="_dispatch" value="{{index}}" range="{{typeArr}}" data-bindchange="bindPickerChange">
			    <view class="picker">
			      {{typeArr[index]}}
			    </view>
			</picker>
		</view>
	</view>
	<view class="account-item" wx:for="{{rowsArr}}" catchtap="_dispatch" data-link="/pages/accountdetail/accountdetail?id={{item.id}}" data-catchtap="linkTo">
		<view class="inner account-time">
			<view class="day">{{item.day}}</view>
			<view class="time">{{item.time}}</view>
		</view>
		<view class="inner account-info">
			<view class="title">{{item.masterDesc}}</view>
			<view class="name">{{item.subDesc}}</view>
		</view>
		<view class="inner account-number">
			<view class="num">
				<text wx:if="{{item.masterType == 2}}">-</text><text wx:if="{{item.masterType == 1}}">+</text>
				{{item.totalAmt}}
			</view>
			<view class="status">成功</view>
		</view>
	</view>
</view>