<view class="container">
   <view class="tab" bindtap="_dispatch" data-bindtap="tabFun">
     <view class="tab_nav {{tabArr.navIndex=='0'?'active':''}}" data-id="0">申请详情</view>
     <view class="tab_nav {{tabArr.navIndex=='1'?'active':''}}" data-id="1">申请状态</view>
   </view>
  <view class="tab_cont">
    <view class="tab_cont_left {{tabArr.contIndex=='0'?'active':''}}">
      <view class="tab_cont_project">
        <view class="left">所属计划</view>
        <view class="right">{{projectName}}</view>
      </view>
      <view class="tab_cont_project">
        <view class="left">申请人</view>
        <view class="right">{{claimName}}</view>
      </view>
      <view class="tab_cont_project">
        <view class="left">联系方式</view>
        <view class="right">{{claimContact}}</view>
      </view>
      <view class="tab_cont_txt">
        {{claimContent}}
      </view>
    </view>
    <view class="tab_cont_right {{tabArr.contIndex=='1'?'active':''}}">
      <view class="tab_cont_item tab_cont_item_default1 tab_cont_item_default2 {{claimStatus=='5'?'tab_cont_item_active1':(claimStatus>5?'tab_cont_item_active2':'')}}">
        <view class="cont">
          <view class="left {{claimStatus=='5'?'active':''}}">打款</view>
          <view class="right"/>
        </view>
        <view class="success">{{claimStatus=='5'?'打款中':(claimStatus>5?'已结束':'')}}</view>
      </view>
      <view class="tab_cont_item tab_cont_item_default1 tab_cont_item_default2 {{claimStatus=='3'?'tab_cont_item_active1':(claimStatus>3?'tab_cont_item_active2':'')}}">
        <view class="cont">
          <view class="left {{claimStatus=='3'?'active':''}}">信息公示</view>
          <view class="right"/>
        </view>
        <view class="success">{{claimStatus=='3'?'信息公示中':(claimStatus>3?'信息公示成功':'')}}</view>
      </view>
      <view class="tab_cont_item tab_cont_item_default1 tab_cont_item_default2 {{claimStatus=='2'?'tab_cont_item_active1':(claimStatus>2?'tab_cont_item_active2':'')}}">
        <view class="cont">
          <view class="left {{claimStatus=='2'?'active':''}}">材料审核</view>
        </view>
        <view class="success">{{claimStatus=='2'?'材料审核中':(claimStatus>2?'材料审核通过':'')}}</view>
      </view>
      <view class="tab_cont_item tab_cont_item_default1 tab_cont_item_default2 {{claimStatus=='1'?'tab_cont_item_active1':(claimStatus>1?'tab_cont_item_active2':'')}}">
        <view class="cont">
          <view class="left {{claimStatus=='1'?'active':''}}">材料准备中</view>
        </view>
        <view class="success">{{claimStatus=='1'?'材料准备中':(claimStatus>1?'材料准备成功':'')}}</view>
      </view>
      <view class="tab_cont_item tab_cont_item_default2 {{claimStatus=='0'?'tab_cont_item_active1':'tab_cont_item_active2'}}">
        <view class="cont">
          <view class="left {{claimStatus=='0'?'active':''}}">提交成功</view>
        </view>
        <view class="success">{{claimStatus=='0'?'新提交':'提交成功'}}</view>
      </view>
    </view>
  </view>
  
</view>