<view class="container accountdetail">
	<view class="top-title">
		<view class="h2">账单详情</view>	
	</view>
	<view class="snum">
		<view class="status">
			<text>成功</text>
		</view>
		<view class="num"><text wx:if="{{account.masterType == 2}}">-</text><text wx:if="{{account.masterType == 1}}">+</text>{{account.totalAmt}}</view>
	</view>
	<view class="media-list">
		<view class="item-content">
			<view class="item-inner">
				<view class="item-title">账单类型</view>
				<view class="item-after gray-m" wx:if="{{account.masterType == 1}}">充值</view>
				<view class="item-after" wx:if="{{account.masterType == 2}}">援助</view>
			</view>
		</view>
		<view class="item-content">
			<view class="item-inner">
				<view class="item-title">所属计划</view>
				<view class="item-after gray-m">{{account.masterDesc}}</view>
			</view>
		</view>
		<view class="item-content">
			<view class="item-inner">
				<view class="item-title">姓名</view>
				<view class="item-after gray-m">{{account.subDesc}}</view>
			</view>
		</view>
		<view class="item-content">
			<view class="item-inner">
				<view class="item-title">创建时间</view>
				<view class="item-after gray-m">{{account.createTimeStr}}</view>
			</view>
		</view>
	</view>
</view>