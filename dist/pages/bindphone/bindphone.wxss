.bind-top {
  text-align: center;
  padding-top: 50rpx;
}
.bind-top .head {
  width: 170rpx;
  height: 170rpx;
  border-radius: 100%;
  border: 5rpx solid #fff;
  overflow: hidden;
  margin: 0 auto;
}
.bind-top .head .img {
  width: 170rpx;
  height: 170rpx;
  border-radius: 100%;
}
.bind-top .name {
  margin-top: 40rpx;
  color: #666;
}
.bind-top .note {
  margin: 68rpx 0  78rpx 0;
  color: #ffa033;
  font-size: 24rpx;
}
.bind-top .note .icon-tip {
  background: url("data:image/png;base64,") no-repeat;
  background-size: 32rpx auto;
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  position: relative;
  top: 6rpx;
}
.bind-form .input-area {
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  padding-left: 20rpx;
}
.bind-form .section {
  min-height: 87rpx;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.bind-form .section:first-child {
  border-bottom: 1rpx solid #ddd;
}
.bind-form .section input {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.bind-form .section input::-webkit-input-placeholder {
  font-size: 24rpx;
  color: #ddd;
}
.bind-form .section.pcode input {
  width: 320rpx;
}
.bind-form .section.pcode .btn {
  border: 0;
  height: 40rpx;
  color: #ff6a00;
  width: 200rpx;
  line-height: 40rpx;
  outline: 0;
  background-color: transparent;
  border-left: 2px solid #ddd;
  font-size: 28rpx;
  border-radius: 0;
  text-align: center;
}
.bind-form .section.pcode .btn.disabled {
  color: #c7c7c7;
}
.bind-form .section .section_title {
  font-size: 28rpx;
  width: 170rpx;
  color: #666;
  height: 87rpx;
  line-height: 87rpx;
  float: left;
}
.bind-btn {
  padding: 36rpx 25rpx 0 25rpx;
}
.bind-btn .submitbtn {
  color: #fff;
  background-color: #ff6a00;
}
.bind-btn .submitbtn.disabled {
  color: rgba(255, 255, 255, 0.6);
}
